<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_18"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_18"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_PendingPayment_ddh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/order_PendingPayment_ddh"
            android:text="123123213123"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-1-17"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/order_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_PendingPayment_ddh"
            android:layout_marginTop="@dimen/dp_10">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/order_PendingPayment_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_recycle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/order_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#ff0000"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件商品，需付款"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1670.00"
                android:textColor="#ff0606"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <Button
            android:id="@+id/order_cancel"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:layout_below="@id/order_PendingPayment_lin"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#f2f2f2"
            android:text="取消订单"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/order_payment"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:layout_alignTop="@id/order_cancel"
            android:layout_alignParentRight="true"
            android:background="#ff5757"
            android:gravity="center"
            android:text="去支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>
</android.support.v7.widget.CardView>