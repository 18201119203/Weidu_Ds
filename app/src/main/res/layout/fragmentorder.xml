<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

   <android.support.v7.widget.CardView
       app:cardElevation="@dimen/dp_10"
       app:cardCornerRadius="@dimen/dp_10"
       android:layout_width="match_parent"
       android:layout_margin="@dimen/dp_24"
       android:layout_height="wrap_content">

      <RadioGroup
          android:id="@+id/but_order"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_102"
          android:orientation="horizontal">
         <RadioButton
             android:id="@+id/all_order"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="全部订单"
             android:layout_marginTop="@dimen/dp_20"
             android:layout_weight="1"
             android:drawableTop="@drawable/common_icon_all_list"
             android:gravity="center"
             android:button="@null"/>
         <RadioButton
             android:id="@+id/money_order"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="代付款"
             android:layout_weight="1"
             android:layout_marginTop="@dimen/dp_20"
             android:drawableTop="@drawable/common_icon_pay"
             android:gravity="center"
             android:button="@null"/>
         <RadioButton
             android:id="@+id/take_order"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="待收货"
             android:layout_marginTop="@dimen/dp_20"
             android:gravity="center"
             android:drawableTop="@drawable/common_icon_receive"
             android:layout_weight="1"
             android:button="@null"/>
         <RadioButton
             android:id="@+id/app_order"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="待评价"
             android:layout_marginTop="@dimen/dp_20"
             android:gravity="center"
             android:layout_weight="1"
             android:drawableTop="@drawable/commom_icon_comment"
             android:button="@null"/>
         <RadioButton
             android:id="@+id/success_order"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="已完成"
             android:layout_marginTop="@dimen/dp_20"
             android:gravity="center"
             android:layout_weight="1"
             android:drawableTop="@drawable/common_icon_finish"
             android:button="@null"/>
      </RadioGroup>
   </android.support.v7.widget.CardView>



      <com.jcodecraeer.xrecyclerview.XRecyclerView
          android:id="@+id/rv_order"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </com.jcodecraeer.xrecyclerview.XRecyclerView>


</LinearLayout>